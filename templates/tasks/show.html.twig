{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <div class="container">
        <h1>Tasks</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ task.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ task.status }}</td>
                </tr>
                <tr>
                    <th>Priority</th>
                    <td>{{ task.priority ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>StartDate</th>
                    <td>{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>EndDate</th>
                    <td>{{ task.endDate ? task.endDate|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_tasks_index') }}">back to list</a>

        <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>

        {{ include('tasks/_delete_form.html.twig') }}
    </div>
{% endblock %}
